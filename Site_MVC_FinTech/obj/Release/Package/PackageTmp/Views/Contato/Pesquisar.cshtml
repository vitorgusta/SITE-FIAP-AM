@model IEnumerable<Site_MVC_FinTech.Models.Contato>

@{
    ViewBag.Title = "Pesquisar";
}

<h2>Pesquisar Clientes</h2>
<div>
    <div>
        @using (Html.BeginForm())
        {
            <input type="text" name="texto" id="texto" placeholder="Digite a pesquisa" />
            <input type="submit" value="Pesquisar" />

            <select name="combo">
                <option value="todos">Todos</option>
                <option value="nome">Nome</option>
                <option value="mensagem">Mensagem</option>
            </select>
        }
    </div>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Mensagem</th>
            <th>Data Mensagem</th>
        </tr>
        @{
            if (Model != null && ((List<Site_MVC_FinTech.Models.Contato>)Model).Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IDContato</td>
                        <td>@item.NomeContato</td>
                        <td>@item.EmailContato</td>
                        <td>@item.Mensagem</td>
                        <td>@item.DataMensagem</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">@ViewBag.Mensagem</td>
                </tr>
            }
        }
    </table>
</div>

<a class="btn btn-default" href="/Pessoa/AreaRestrita">Area Restrita</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    