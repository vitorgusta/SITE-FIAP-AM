@model Site_MVC_FinTech.Models.Produto

@{
    ViewBag.Title = "Cadastrar";
}

<div class="cliente-index">
    <div class="cliente-index-div">
        @using (Html.BeginForm())
        {
            <div class="form-group-contato">
                <h2>Cadastrar Produto</h2>
                @Html.HiddenFor(model => model.IDProduto)
                <tr>
                    <td colspan="2">@ViewBag.Mensagem </td>
                </tr>

                @{
                    if (string.IsNullOrWhiteSpace(ViewBag.Mensagem))
                    {
                        <td>@Html.LabelFor(model => model.Titulo, new { @class = "col-md-2 control-label contato" })</td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Titulo)
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
                        </td>
                        <tr>
                            <td>@Html.LabelFor(model => model.Texto, new { @class = "col-md-2 control-label contato" })</td>
                            <td>
                                @Html.ValidationMessageFor(model => model.Texto)
                                @Html.TextBoxFor(model => model.Texto, new { @class = "form-control" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align:right"><input type="submit" value="Cadastrar" /></td>
                        </tr>
                    }
                }

            </div>

            <a class="btn btn-default" href="~/Produto/Listar">Voltar</a>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

